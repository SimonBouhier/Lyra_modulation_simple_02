<body>
  <div class="container">
    <header>ðŸ§  Interface Lyra Web</header>

    <div class="message-log" id="log">Bienvenue. Pose une question ou charge un fichier.</div>

    <textarea id="input" placeholder="Ã‰cris ton message pour Lyra..."></textarea>
    <button onclick="sendMessage()">Envoyer Ã  Lyra</button>

    <input type="file" id="fileInput">
    <button onclick="uploadFile()">Analyser un fichier</button>
  </div>

  <script>
    const log = document.getElementById('log');

    function appendLog(role, text) {
      log.textContent += `\n\n${role === 'user' ? 'ðŸ‘¤ Toi' : 'ðŸ¤– Lyra'} :\n${text}`;
      log.scrollTop = log.scrollHeight;
    }

    async function sendMessage() {
      const input = document.getElementById('input').value.trim();
      if (!input) return;
      appendLog('user', input);

      const res = await fetch('/lyra', { ... })
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ module: 'lyra_scope', payload: { signals: [input] } })
      });
      const data = await res.json();
      appendLog('lyra', JSON.stringify(data, null, 2));
    }

    async function uploadFile() {
      const fileInput = document.getElementById('fileInput');
      const file = fileInput.files[0];
      if (!file) return;

      const formData = new FormData();
      formData.append('file', file);

      const res = await fetch('/upload', { ... })
        method: 'POST',
        body: formData
      });
      const data = await res.json();
      appendLog('lyra', `Fichier: ${file.name}\n${JSON.stringify(data, null, 2)}`);
    }
  </script>
</body>
